<?xml version="1.0" encoding="GB2312"?>
<DzhLog>
<!--默认加载的category的name是default-->
<Load>default</Load>

<!--name是DataService的category-->
<category name="default">
<Appender>file</Appender>
</category>

<category name="backup">
<!--<Appender>console</Appender>-->
<Appender>backupfile</Appender>
</category>

<category name="stacktrace">
<!--<Appender>console</Appender>-->
<Appender>stacktracefile</Appender>
</category>

<!--name是category的Appender，类型是Console-->
<appender name="console" type="Console"/>
<!--name是category的Appender，类型是File，路径是log\dzh_formula\dzh_formula.txt， 大小是4M-->
<appender name="backupfile" type="File" path="dzhfunlog\backup.txt" size="10"/>
<appender name="stacktracefile" type="File" path="dzhfunlog\stacktrace.txt" size="10"/>
</DzhLog>